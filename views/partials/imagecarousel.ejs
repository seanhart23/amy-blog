
<div class='container' id='carousel'>
    <div class="row">
            <div class='col-md-4' id='image'> 
                <div id="slideshow">
                <% blogs.sort().reverse().forEach(function(blog){ %>
                    <div>
                        <a href="/posts/<%= blog._id %>">
                        <img class='cover mainImage1 img-responsive' src="<%= blog.image %>">
                        <span class='mainImageCaption1'>
                            <% var date = new Date(blog.created); %>
                            <% var options = {weekday: "long", year: "numeric", month: "long", day: "numeric"};%>  
                            <span class='mainImageDate'><%= date.toLocaleDateString('en-us', options) %></span>
                            <p class='mainImageTitle'><%= blog.title %></p>
                        </span></a>
                    </div>
                    <% }) %>
                </div>
            </div>
            <div class='col-md-4' id='image'> 
                <div id="slideshow1">
                    <% var blogInOrder = blogs.sort() %>
                    <% for (let y=blogInOrder.length - 2; y >= 0; y--){ %>
                    <div>
                        <a href="/posts/<%= blogs[y]._id %>">
                        <img class='cover mainImage1 img-responsive' src="<%= blogs[y].image %>">
                        <span class='mainImageCaption1'>
                            <% var date = new Date(blogs[y].created); %>
                            <% var options = {weekday: "long", year: "numeric", month: "long", day: "numeric"};%>  
                            <span class='mainImageDate'><%= date.toLocaleDateString('en-us', options) %></span>
                            <p class='mainImageTitle'><%= blogs[y].title %></p>
                        </span></a>
                    </div>
                    <% } %>
                </div>
            </div>
            <div class='col-md-4' id='image'> 
                <div id="slideshow2">
                    <% var blogInOrder = blogs.sort() %>
                    <% for (var z=blogInOrder.length - 3; z >= 0; z--){ %>
                    <div>            
                        <a href="/posts/<%= blogs[z]._id %>">
                        <img class='cover mainImage2 img-responsive' src="<%= blogs[z].image %>">
                        <span class='mainImageCaption2'>
                            <% var date = new Date(blogs[z].created); %>
                            <% var options = {weekday: "long", year: "numeric", month: "long", day: "numeric"};%>  
                            <span class='mainImageDate'><%= date.toLocaleDateString('en-us', options) %></span>
                            <p class='mainImageTitle'><%= blogs[z].title %></p>
                        </span></a>
                    </div>
                    <% } %> 
                    <button class="w3-button w3-display-right" id='rightArrow'>&#10095;</button>
                </div>
            </div>
        </div>
    </div>
    

