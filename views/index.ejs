<% include ./partials/header %>

<div class='ui container'>
   <% if(currentUser){ %>
        <a href='/posts/new' class='ui secondary small button'>New Post</a><p></p>
    <% } %>
    
<div class="ui grid">
    <div class="twelve wide column">
        <% blogs.slice(-3).reverse().forEach(function(blog){ %>
            <div class='border'>
                <div class='ui grid'>
                <div class='eight wide column'> 
                    <div class="meta">
                        <% var date = new Date(blog.created); %>
                        <% var options = {weekday: "long", year: "numeric", month: "long", day: "numeric"};%>  
                        <span id='date'><%= date.toLocaleDateString('en-us', options) %></span>
                    </div>
                    <div class="item" id='title'>
                        <h2><%= blog.title %></h2>
                    </div>
                    <div class="content">
                        <div class="description">
                            <p class='formattedText'><%- blog.body.substring(0, 400) %>...</p>
                        </div>
                        <hr id='postLine'>
                        <div class="extra">
                            <span id='category'>Topic: <%= blog.category1 %><% if(blog.category2){ %>, <% }; %><%= blog.category2 %><% if(blog.category3){ %>, <% }; %><%= blog.category3 %></span>
                            <a href="/posts/<%= blog._id %>" id='postLink'>Read More . . .</a>
                        </div>
                    </div> 
                </div>
                <div class='eight wide column'>
                    <div id="image">
                        <img class="ui medium bordered image" src="<%= blog.image %>">
                    </div>
                </div>
            </div>
            </div>
            <br>
        <% }) %>
        <div class='old'><a href='./categories/archive' id='old'>Older Posts ></a></div>
    </div>
    <% include ./partials/rightrail %>
</div>

<% include ./partials/footer %>