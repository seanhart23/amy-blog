<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Add a Comment</div>
    <form class="ui form" action="/posts/<%= blog._id %>/comments" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="comment[author]" placeholder="Name" required>
        </div>        
        <div class="field">
            <label>Comment</label>
            <textarea name="comment[text]" required></textarea>
        </div>
        <input type="submit" class="ui secondary small button">
    </form>
</div>

