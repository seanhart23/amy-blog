<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/posts/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>        
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>    
        <div class='field'>
            <label>Categories</label>
            <select class='form-control' name="blog[category1]">
                <option value="" disabled selected><%= blog.category1 %></option>
                <option value="">None</option>
                <option value="Motherhood">Motherhood</option>
                <option value="Interior Style">Interior Style</option>
                <option value="Wellness">Wellness</option>
                <option value="Life">Life</option>
            </select>
        </div>     
        <div class='field'>
            <select class='form-control' name="blog[category2]">
                <option value="" disabled selected><%= blog.category2 %></option>
                <option value="">None</option>
                <option value="Motherhood">Motherhood</option>
                <option value="Interior Style">Interior Style</option>
                <option value="Wellness">Wellness</option>
                <option value="Life">Life</option>
            </select>
        </div>     
        <div class='field'>
            <select class='form-control' name="blog[category3]">
                <option value="" disabled selected><%= blog.category3 %></option>
                <option value="">None</option>
                <option value="Motherhood">Motherhood</option>
                <option value="Interior Style">Interior Style</option>
                <option value="Wellness">Wellness</option>
                <option value="Life">Life</option>
            </select>
        </div>
        <div class="field">
            <label>Blog Summary</label>
            <textarea name="blog[summary]"><%= blog.summary %></textarea>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" rows='30' id='textAreaEdit'><%= blog.body %></textarea>
        </div>
        <input type="submit" class="ui green inverted button">
        <input type="button" class="ui blue inverted button add" value="Add Image" onclick="addtxtedit('textAreaEdit')">
        <input type="button" class="ui purple inverted button edit" value="Add Signature" onclick="addsigedit('textAreaEdit')">
    </form>
</div>

<% include ./partials/footer %>